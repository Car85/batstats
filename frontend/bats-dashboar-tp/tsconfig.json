{
  "compilerOptions": {
    "noEmitOnError": false,
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": [
      "@testing-library/react",
      "@testing-library/user-event",
      "plotly.js",
      "react-plotly.js"
    ],
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "rootDir": "./",
    "outDir": "./dist" 
  },
  "include": [
  "src/**/*",
  "src/types/**/*",
  "src/**/*.ts",
  "electron/**/*"  
  ],
  "exclude": ["node_modules"]
}
